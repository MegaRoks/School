@model School.schedule

@{
    ViewBag.Title = "Удаление";
}

<h2>Удаление</h2>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>schedule</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Кабинет")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cabinet)
        </dd>

        <dt>
            @Html.DisplayName("Время")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.time)
        </dd>

        <dt>
            @Html.DisplayName("Предмет")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.subject.name)
        </dd>

        <dt>
            @Html.DisplayName("Учитель")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.teacher.fio)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
